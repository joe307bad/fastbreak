platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_KEY"],
      is_key_content_base64: true
    )

    # Create a temporary keychain for CI
    keychain_name = "fastlane_tmp_keychain"
    keychain_password = SecureRandom.base64

    create_keychain(
      name: keychain_name,
      password: keychain_password,
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
    )

    match(
      type: "appstore",
      readonly: true,
      api_key: api_key,
      keychain_name: keychain_name,
      keychain_password: keychain_password
    )

    # Use BUILD_NUMBER from CI environment
    increment_build_number(
      build_number: ENV["BUILD_NUMBER"],
      xcodeproj: "iosApp.xcodeproj"
    )

    build_app(
      workspace: "iosApp.xcworkspace",
      scheme: "iosApp",
      export_method: "app-store",
      xcargs: "CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE_SPECIFIER='match AppStore com.joebad.fastbreak' CODE_SIGN_IDENTITY='iPhone Distribution'",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.joebad.fastbreak" => "match AppStore com.joebad.fastbreak"
        }
      }
    )

    upload_to_testflight(api_key: api_key)

    # Upload dSYMs to Sentry for crash symbolication
    if ENV["SENTRY_AUTH_TOKEN"]
      sentry_upload_dif(
        auth_token: ENV["SENTRY_AUTH_TOKEN"],
        org_slug: "joe-badaczewski",
        project_slug: "fastbreak-ios",
        include_sources: true
      )
    end

    delete_keychain(name: keychain_name)
  end
end