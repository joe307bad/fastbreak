# Run daily scripts every day at 7am Eastern Time
0 7 * * * . /app/env.sh && /usr/bin/find /app/daily -name "*.R" -exec /usr/local/bin/Rscript {} \; >> /var/log/cron.log 2>&1

# Run Fastbreak.Daily to generate topics every day at 7am Eastern Time
0 7 * * * . /app/env.sh && /app/Fastbreak.Daily >> /var/log/cron.log 2>&1

# Run weekly scripts every Sunday at 7am Eastern Time
0 7 * * 0 . /app/env.sh && /usr/bin/find /app/weekly -name "*.R" -exec /usr/local/bin/Rscript {} \; >> /var/log/cron.log 2>&1

# Empty line required at end of file
