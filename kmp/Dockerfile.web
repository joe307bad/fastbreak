FROM gradle:8-jdk21 AS builder

WORKDIR /app

# Copy all KMP project files
COPY . .

# Make gradlew executable
RUN chmod +x gradlew

# Build the Wasm application (development build - faster, skips slow optimization)
RUN ./gradlew :webApp:wasmJsBrowserDevelopmentDistribution --no-daemon

# Production stage with nginx
FROM nginx:alpine

# Copy the built Wasm app to nginx and fix permissions
COPY --from=builder /app/webApp/build/dist/wasmJs/developmentExecutable/ /usr/share/nginx/html/
RUN chmod -R 755 /usr/share/nginx/html/

# Configure nginx to serve the app
RUN echo 'server { \
    listen 80; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
        try_files $uri $uri/ /index.html; \
    } \
    gzip on; \
    gzip_types text/plain text/css application/json application/javascript application/wasm text/xml application/xml application/xml+rss text/javascript; \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
